<div class="row">
	<div class="col-md-5">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<% index = 0 %>
				<% @account.account_photos.all.count.times do |num| %>
				<li data-target="#carousel-example-generic" data-slide-to="<%= num %>" class="<%= index == 0 ? 'active' : ''%>"></li>
				<% index += 1 %>
				<% end %>
			</ol>
			<div class="carousel-inner">
				<% @account.account_photos.all.each_with_index do |a, index| %>
				<div class="item <%= index == 0 ? 'active' : '' %>">
					<%= image_tag a.photo_url %>
				</div>
				<% end %>
			</div>
			<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
			</a>
		</div>
	<%= link_to 'Buy Now', confirm_path(id: @account), class: "btn btn-block btn-primary", role: "button"%>
	</div>
	<div class="col-md-7">
		<div class="bs-example bs-example-tabs">
	    <ul id="myTab" class="nav nav-tabs" role="tablist">
	      <li class="active"><a href="#home" role="tab" data-toggle="tab">Detail</a></li>
	      <li><a href="#profile" role="tab" data-toggle="tab">Video</a></li>
	    </ul>

	    <div id="myTabContent" class="tab-content">
	      <div class="tab-pane fade in active" id="home">
					<p><%= @account.attributes.each{|key,value| "#{key}:#{value}"} %></p>
	      </div>
	      <div class="tab-pane fade" id="profile">
	      	<div class="bs-example">
				    <div class="embed-responsive embed-responsive-16by9">
				    	<iframe width="560" height="315" src="//www.youtube.com/embed/<%= @account.video %>" frameborder="0" allowfullscreen></iframe>
				    </div>
				  </div>
	      </div>
			</div>
  	</div>
	</div>
</div>